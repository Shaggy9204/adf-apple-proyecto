{
	"name": "df_limpiar_unir_productos",
	"properties": {
		"folder": {
			"name": "Silver"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_sql_category",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "ds_sql_products",
						"type": "DatasetReference"
					},
					"name": "source2"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_sql_silver_productos_full",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "filter1"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "join1"
				},
				{
					"name": "select1"
				},
				{
					"name": "aggregate2"
				}
			],
			"scriptLines": [
				"source(output(",
				"          category_id as string,",
				"          category_name as string,",
				"          extra_note as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"source(output(",
				"          Product_ID as string,",
				"          Product_Name as string,",
				"          Category_ID as string,",
				"          Launch_Date as string,",
				"          Price as string,",
				"          notes as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source2",
				"source1 derive(category_id_clean = upper(trim(category_id)),",
				"          category_name_clean = initCap(trim(category_name))) ~> derivedColumn1",
				"derivedColumn1 filter(!isNull(category_id_clean) && !isNull(category_name_clean) && length(category_id_clean) > 0) ~> filter1",
				"filter1 aggregate(groupBy(category_id_clean),",
				"     category_name_final = first(category_name_clean)) ~> aggregate1",
				"source2 derive(Price_Clean = toDecimal(\r",
				"    case(\r",
				"        regexMatch(toString(Price), '(?i)one thousand'), '1761.00',\r",
				"        replace(replace(replace(toString(Price), '$', ''), ',', ''), '.', '')\r",
				"    ),\r",
				"    10, 2\r",
				"),",
				"          Date_Clean = coalesce(\r",
				"    toDate(trim(Launch_Date), 'yyyy-MM-dd'),\r",
				"    toDate(trim(Launch_Date), 'yyyy/MM/dd'),\r",
				"    toDate(trim(Launch_Date), 'MMM dd yyyy'),\r",
				"    toDate(trim(Launch_Date), 'dd/MM/yyyy'),\r",
				"    toDate(trim(Launch_Date), 'yyyy.MM.dd'),\r",
				"    toDate(trim(Launch_Date), 'dd-MM-yyyy')\r",
				")) ~> derivedColumn2",
				"aggregate1, aggregate2 join(category_id_clean == Category_ID,",
				"     joinType:'right',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 select(mapColumn(",
				"          category_id_clean,",
				"          category_name_final,",
				"          Product_ID,",
				"          Product_Name,",
				"          Date_Clean,",
				"          Price_Clean",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"derivedColumn2 aggregate(groupBy(Product_ID),",
				"     Product_Name = first(Product_Name),",
				"          Category_ID = first(Category_ID),",
				"          Date_Clean = first(Date_Clean),",
				"          Price_Clean = first(Price_Clean)) ~> aggregate2",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Product_ID as string,",
				"          Product_Name as string,",
				"          Category_ID as string,",
				"          Category_Name as string,",
				"          Launch_Date as date,",
				"          Price as decimal(10,2)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     truncate:true,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          Product_ID,",
				"          Product_Name,",
				"          Category_ID = category_id_clean,",
				"          Category_Name = category_name_final,",
				"          Launch_Date = Date_Clean,",
				"          Price = Price_Clean",
				"     )) ~> sink1"
			]
		}
	}
}