{
	"name": "df_limpiar_unir_ventas",
	"properties": {
		"folder": {
			"name": "Silver"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_sql_stores",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "ds_sql_warranty",
						"type": "DatasetReference"
					},
					"name": "source2"
				},
				{
					"dataset": {
						"referenceName": "ds_sql_sales",
						"type": "DatasetReference"
					},
					"name": "source3"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_sql_silver_ventas_full",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "derivedColumn2"
				},
				{
					"name": "aggregate2"
				},
				{
					"name": "derivedColumn3"
				},
				{
					"name": "join1"
				},
				{
					"name": "join2"
				},
				{
					"name": "select1"
				},
				{
					"name": "derivedColumn4"
				},
				{
					"name": "filter1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Store_ID as string,",
				"          Store_Name as string,",
				"          City as string,",
				"          Country as string,",
				"          opened as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"source(output(",
				"          claim_id as string,",
				"          claim_date as string,",
				"          sale_id as string,",
				"          repair_status as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source2",
				"source(output(",
				"          sale_id as string,",
				"          sale_date as string,",
				"          store_id as string,",
				"          product_id as string,",
				"          quantity as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source3",
				"source1 derive(Store_Name = replace(replace(Store_Name, \"'\", \"\"), '\"', \"\"),",
				"          City = trim(City),",
				"          Country = trim(Country),",
				"          Store_ID = trim(Store_ID)) ~> derivedColumn1",
				"derivedColumn1 aggregate(groupBy(Store_ID),",
				"     Store_Name = first(Store_Name),",
				"          City = first(City),",
				"          Country = first(Country)) ~> aggregate1",
				"source2 derive(Claim_Date_Clean = toDate(claim_date, 'yyyy-MM-dd'),",
				"          Sale_ID = trim(sale_id)) ~> derivedColumn2",
				"derivedColumn2 aggregate(groupBy(claim_id),",
				"     Sale_ID = first(derivedColumn2@Sale_ID),",
				"          claim_date = first(Claim_Date_Clean),",
				"          repair_status = first(repair_status)) ~> aggregate2",
				"source3 derive(Sale_Date_Clean = toDate(sale_date, 'dd-MM-yyyy'),",
				"          Store_ID = trim(store_id),",
				"          Sale_ID = trim(sale_id)) ~> derivedColumn3",
				"derivedColumn3, aggregate1 join(derivedColumn3@Store_ID == aggregate1@Store_ID,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1, aggregate2 join(derivedColumn3@Sale_ID == aggregate2@Sale_ID,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join2",
				"join2 select(mapColumn(",
				"          product_id,",
				"          quantity,",
				"          Sale_Date_Clean,",
				"          Store_ID = derivedColumn3@Store_ID,",
				"          Store_Name,",
				"          City,",
				"          Country,",
				"          claim_id,",
				"          Sale_ID = derivedColumn3@Sale_ID,",
				"          claim_date,",
				"          repair_status",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 derive(repair_status = iifNull(repair_status, 'Sin GarantÃ­a'),",
				"          claim_id = iifNull(claim_id, 'N/A'),",
				"          quantity = iifNull(toInteger(quantity), 0),",
				"          claim_date = iifNull(claim_date, toDate('1900-01-01'))) ~> derivedColumn4",
				"derivedColumn4 filter(!isNull(Sale_ID) && length(toString(Sale_ID)) > 0) ~> filter1",
				"filter1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Sale_ID as string,",
				"          Sale_Date as date,",
				"          Product_ID as string,",
				"          Quantity as integer,",
				"          Store_ID as string,",
				"          Store_Name as string,",
				"          City as string,",
				"          Country as string,",
				"          Claim_ID as string,",
				"          Claim_Date as date,",
				"          Repair_Status as string",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          Sale_ID,",
				"          Sale_Date = Sale_Date_Clean,",
				"          Product_ID = product_id,",
				"          Quantity = quantity,",
				"          Store_ID,",
				"          Store_Name,",
				"          City,",
				"          Country,",
				"          Claim_ID = claim_id,",
				"          Claim_Date = claim_date,",
				"          Repair_Status = repair_status",
				"     )) ~> sink1"
			]
		}
	}
}